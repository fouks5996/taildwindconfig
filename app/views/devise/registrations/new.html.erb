<div class="flex flex-col items-center justify-center h-screen mt-8">
    <h2 class="text-big font-inter text-white font-extrabold mb-3" >Create your account </h2>
    <p class="text-small font-inter text-textnormal w-2/5 text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum purus dapibus nunc, egestas pulvinar.</p>
    <div class="p-7 bg-darky rounded-xl my-8" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="flex flex-col">

        <div class="flex items-end  mb-6">
          <div class="flex flex-col mr-5">
            <%= f.label :first_name, class: "text-white text-normal mb-2"  %>
            <%= f.text_field :first_name , class: "w-full placeholder:text-ph", autofocus: true, placeholder: "Ex : John"%>
          </div>
          <div class="flex flex-col">
            <%= f.label :last_name, class: "text-white text-normal mb-2"  %>
            <%= f.text_field :last_name, class: "w-full placeholder:text-ph", placeholder: "Ex : John"%>
          </div>
        </div>

        <%= f.label :email, class: "text-white text-normal mb-2" %>
        <%= f.email_field :email, class: "w-full placeholder:text-ph  mb-6",  placeholder: "Ex : john-doe@gmail.com", autocomplete: "email" %>
        
        <div class="flex items-start ">
            <div class="flex flex-col mr-5">
                <%= f.label :password, class: "text-white text-normal mb-2" %>
                <%= f.password_field :password, class: "w-full placeholder:text-ph  mb-6", placeholder: "Ex : azerty", autocomplete: "new-password" %>
            </div>
            <div class="flex flex-col">
                <%= f.label :password_confirmation, class: "text-white text-normal mb-2"  %>
                <%= f.password_field :password_confirmation, class: "w-full placeholder:text-ph", placeholder: "Ex : azerty", autocomplete: "new-password" %>
            </div>
         </div>
        <%= f.submit "Sign up", class:"btn-primary" %>
      </div>
      <% end %>
    </div>
</div>