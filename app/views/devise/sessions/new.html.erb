<div class="flex flex-col items-center justify-center h-screen">
    <h2 class="text-big font-inter text-white font-extrabold mb-3" >Connect to your account </h2>
    <p class="text-small font-inter text-textnormal w-2/5 text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum purus dapibus nunc, egestas pulvinar.</p>
    <div class="p-7 bg-darky rounded-xl my-8" >
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col">
        <%= f.label :email, class: "text-white text-normal mb-2" %>
        <%= f.email_field :email, class: "w-64 mb-7 placeholder:text-ph", autofocus: true, placeholder: "Ex : john-doe@gmail.com", autocomplete: "email" %>
        <%= f.label :password, class: "text-white text-normal mb-2" %>
        <%= f.password_field :password, class: "w-64 placeholder:text-ph", placeholder: "Ex : azerty", autocomplete: "current-password" %>
        <%= f.submit "Connect", class:"btn-primary  mt-8" %>
      </div>
      <% end %>
    </div>
</div>