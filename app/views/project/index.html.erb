<div class="pt-32 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" >
  <div class="flex items-end justify-between mb-7" >
      <div>
        <h6 class="text-sm font-bold text-btn mb-2" > Hi <%= current_user.first_name%></h6>
        <h1 class="text-big font-inter text-white font-extrabold mb-3"> Here, your projects </h1>
        <p class="text-small font-inter text-textnormal w-4/5 ">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum purus dapibus nunc, egestas pulvinar.</p>
      </div>
      <div class="mb-3" >
            <%= link_to 'New Project', new_project_path, class:"btn-primary" %>
      </div>
  </div>
       <% if @user_projects.length == 0 %>
        <div class="flex items-center justify-center w-full h-80" >
            <h1 class="text-big text-white font-bold" > Tu n'as pas encore de projets !</h1>
          </div>
        <% else %>
        <div class="flex justify-between items-center mt-20 mb-3 ml-9 w-11/12 " >
            <div class="text-normal text-white  min-w-basic " > Name </div>
            <div class="text-normal text-white  min-w-basic "> Type</div>
            <div class="text-normal text-white  min-w-basic "> Created at</div>
            <div class="text-normal text-white  min-w-basic "> Updated at</div>
            <div class="text-normal text-white  min-w-basic ">  Exported ?</div>
            <div></div>
        </div>
        <div class="bg-darky w-full px-6 pt-1 pb-6 rounded-xl " >
            <% @user_projects.each do |project| %>
                <% if current_user.id == project.user_id %>
                <div class="flex justify-between items-center mt-5" >
                    <div class="text-normal text-white p-3 bg-lighty bg-opacity-25 min-w-basic rounded-md" > <%= project.project_name %></div>
                    <div class="text-normal text-white p-3 bg-lighty bg-opacity-25 min-w-basic rounded-md"> <%= project.type_project %></div>
                    <div class="text-normal text-white p-3 bg-lighty bg-opacity-25 min-w-basic rounded-md"> <%= project.created_at.strftime("%d %B %Y") %></div>
                    <div class="text-normal text-white p-3 bg-lighty bg-opacity-25 min-w-basic rounded-md"> <%= project.updated_at.strftime("%d %B %Y") %></div>
                    <div class="text-normal text-white p-3 bg-lighty bg-opacity-25 min-w-basic rounded-md">  <%= project.exported %></div>
                    <div>
                        <%= link_to '<i class="fa-solid fa-sliders"></i>'.html_safe, edit_project_path(project), class:"mr-5 text-white hover:bg-trans visited:text-white" %>
                        <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, project, class:"text-white hover:bg-trans visited:text-white", method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                </div>
                <% end %>
            <% end %>
          </div>
      <% end %>
</div>

